        switch(ledNumber)
        {
            case 0:
                ledOff(CAR_PORT, CAR_RED);
                ledOff(CAR_PORT, CAR_YELLOW);
                ledOff(CAR_PORT, CAR_GREEN);
                break;
            case 1:
                ledOn(CAR_PORT, CAR_RED);
                ledOff(CAR_PORT, CAR_YELLOW);
                ledOff(CAR_PORT, CAR_GREEN);
                break;
            case 2:
                ledOn(CAR_PORT, CAR_RED);
                ledOn(CAR_PORT, CAR_YELLOW);
                ledOff(CAR_PORT, CAR_GREEN);
                break;
            case 3:
                ledOn(CAR_PORT, CAR_RED);
                ledOn(CAR_PORT, CAR_YELLOW);
                ledOn(CAR_PORT, CAR_GREEN);
                break;
            default:
                break;
        }
    }
